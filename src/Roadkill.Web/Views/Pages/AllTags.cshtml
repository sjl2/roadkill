@model IEnumerable<TagViewModel>
@{ 
	ViewBag.Title = SiteStrings.AllTags_Title;
}
<h1>@SiteStrings.AllTags_Title</h1>

@if (Model.Count() > 0)
{
<ul id="tagcloud" class="rounded10">
@foreach (TagViewModel tag in Model)
{
	<li class="@tag.ClassName">
	@Html.ActionLink(tag.Name,"Tag",new { id = tag })
	</li>
}
</ul>
}
else
{
	<p>@SiteStrings.AllTags_NoResults</p>
}